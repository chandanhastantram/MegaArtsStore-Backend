{
  "info": {
    "name": "MegaArtsStore API",
    "description": "Production-grade AR Jewellery Ecommerce Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "base_url", "value": "http://localhost:8000"},
    {"key": "token", "value": ""}
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/register",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"user@example.com\", \"password\": \"password123\", \"name\": \"Test User\"}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login",
            "header": [{"key": "Content-Type", "value": "application/x-www-form-urlencoded"}],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {"key": "username", "value": "user@example.com"},
                {"key": "password", "value": "password123"}
              ]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/auth/me",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/product/list?page=1&per_page=20"
          }
        },
        {
          "name": "Get Product",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/product/:id"
          }
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/product/create",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Gold Bangle\", \"description\": \"22K Gold Bangle\", \"price\": 50000, \"category\": \"Bangles\", \"material\": \"Gold\", \"sizes\": [\"2-4\", \"2-6\"], \"stock\": 10}"
            }
          }
        },
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/product/categories"
          }
        }
      ]
    },
    {
      "name": "Search",
      "item": [
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/search/products?q=gold&category=Bangles"
          }
        },
        {
          "name": "Get Suggestions",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/search/suggestions?q=go"
          }
        },
        {
          "name": "Get Filters",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/search/filters"
          }
        },
        {
          "name": "Trending",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/search/trending"
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/cart/",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        },
        {
          "name": "Add to Cart",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/cart/add",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"product_id\": \"507f1f77bcf86cd799439011\", \"size\": \"2-6\", \"quantity\": 1}"
            }
          }
        },
        {
          "name": "Update Cart Item",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/cart/update/:product_id/:size",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"quantity\": 2}"
            }
          }
        },
        {
          "name": "Remove from Cart",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/cart/remove/:product_id/:size",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/cart/clear",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        }
      ]
    },
    {
      "name": "Wishlist",
      "item": [
        {
          "name": "Get Wishlist",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/wishlist/",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        },
        {
          "name": "Add to Wishlist",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/wishlist/add/:product_id",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        },
        {
          "name": "Remove from Wishlist",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/wishlist/remove/:product_id",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/order/create",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"items\": [{\"product_id\": \"507f1f77bcf86cd799439011\", \"size\": \"2-6\", \"quantity\": 1}], \"shipping_address\": {\"name\": \"John Doe\", \"phone\": \"+919876543210\", \"address_line1\": \"123 Main St\", \"city\": \"Mumbai\", \"state\": \"Maharashtra\", \"pincode\": \"400001\"}}"
            }
          }
        },
        {
          "name": "Order History",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/order/history",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        },
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/order/:order_id",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/payment/create",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"order_id\": \"ORD-12345678\"}"
            }
          }
        },
        {
          "name": "Verify Payment",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/payment/verify",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"order_id\": \"ORD-12345678\", \"razorpay_payment_id\": \"pay_xxx\", \"razorpay_order_id\": \"order_xxx\", \"razorpay_signature\": \"xxx\"}"
            }
          }
        },
        {
          "name": "Payment Status",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/payment/status/:order_id",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        }
      ]
    },
    {
      "name": "AR Analytics",
      "item": [
        {
          "name": "Log Try-On (Anonymous)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/ar/try-on/anonymous",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\"product_id\": \"507f1f77bcf86cd799439011\", \"device_type\": \"mobile\", \"duration_seconds\": 30}"
            }
          }
        },
        {
          "name": "Save Wrist Measurement",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/ar/wrist-measurement",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"wrist_circumference\": 15.5, \"wrist_width\": 5.0}"
            }
          }
        },
        {
          "name": "Get Size Recommendation",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/ar/size-recommendation",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"wrist_circumference\": 15.5}"
            }
          }
        },
        {
          "name": "Get Size Chart",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/ar/size-chart"
          }
        },
        {
          "name": "Preload Featured Models",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/ar/preload/featured"
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Get Reviews",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/reviews/:product_id"
          }
        },
        {
          "name": "Add Review",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/reviews/:product_id",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"rating\": 5, \"comment\": \"Beautiful bangle, perfect fit!\"}"
            }
          }
        }
      ]
    },
    {
      "name": "Admin Dashboard",
      "item": [
        {
          "name": "Dashboard Overview",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/admin/overview",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        },
        {
          "name": "Sales Report",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/admin/sales-report?days=30",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        },
        {
          "name": "Inventory Alerts",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/admin/inventory-alerts?threshold=10",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        },
        {
          "name": "Top Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/admin/top-products?limit=10",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        },
        {
          "name": "AR Analytics",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/admin/ar-analytics?days=30",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}]
          }
        }
      ]
    },
    {
      "name": "3D Rendering",
      "item": [
        {
          "name": "Upload Model",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/render/upload-model",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "product_id", "value": "507f1f77bcf86cd799439011"},
                {"key": "file", "type": "file"}
              ]
            }
          }
        },
        {
          "name": "Process Model",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/render/process",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"product_id\": \"507f1f77bcf86cd799439011\"}"
            }
          }
        },
        {
          "name": "Get AR Config",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/render/ar-config/:product_id"
          }
        }
      ]
    }
  ]
}
